<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activitys.charactersFeature.HeroDetailActivity">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        tools:src="@drawable/marvel"

        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"

        app:layout_constraintTop_toBottomOf="@id/imageDetail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/receiveNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Heros Marvel:"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"

        app:layout_constraintTop_toBottomOf="@id/imageDetail"
        app:layout_constraintStart_toEndOf="@id/tvNameDetail"/>

    <TextView
        android:id="@+id/txtInformationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information:"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tvNameDetail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/infoHeroDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, loren ipso, :"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"

        app:layout_constraintTop_toBottomOf="@id/txtInformationDetail"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>